# ==============================================
# Backend Environment Variables
# ==============================================

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Database Configuration (Required)
# For Vercel Postgres, use the connection string from Vercel dashboard
# Format: postgres://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/pr_bar_exam

# Security
SECRET_KEY=your_secret_key_here_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# For production, set to your frontend domain
# For local dev: http://localhost:3000
# For Vercel: https://your-app.vercel.app
ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# App Configuration
APP_NAME=PR Bar Exam Prep
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx

# Vercel Blob Storage (Required for Vercel deployment)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Vercel Environment Detection (Set automatically by Vercel)
VERCEL=1

# ==============================================
# Frontend Environment Variables
# ==============================================

# API URL - Points to your backend
# For local dev: http://localhost:8000
# For Vercel: https://your-backend.vercel.app or /api if using same domain
NEXT_PUBLIC_API_URL=http://localhost:8000

# Supabase Configuration (for real-time chat)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
